# terminal emulator
super + Return
    termite

# editor
super + shift + Return
    gvim

# program launcher
super + d
    rofi -show run -lines 5

# logout menu
super + shift + e
    ~/scripts/logout-menu.sh

# close node
super + q
    bspc node -c

# swap the current node and the biggest node
super + Tab
    bspc node -s biggest

# set the window state
super + {t,shift + t,s,f}
    bspc node -t {tiled,pseudo_tiled,\~floating,\~fullscreen}

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# focus the next/previous desktop
super + {n,m}
    bspc desktop -f {prev.occupied,next.occupied}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

# preselect the direction
super + {z,u,i,o}
    bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
    bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
    bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
    bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# expand or contract the tiled space in the given direction
super + ctrl + h
    bspc node @west -r -20 || bspc node @east -r -20
super + ctrl + j
    bspc node @south -r +20 || bspc node @north -r +20
super + ctrl + k
    bspc node @north -r -20 || bspc node @south -r -20
super + ctrl + l
    bspc node @east -r +20 || bspc node @west -r +20

# pointer focus
~button1
    bspc pointer -g focus

# pointer start move/resize
super + button{1-3}
    ; bspc pointer -g {move,resize_side,resize_corner}

# pointer end move/resize
super + @button{1-3}
    bspc pointer -u

# media keys
XF86Audio{Raise,Lower}Volume
    amixer -q set Master {2%+ unmute, 2%-}

XF86AudioMute
    amixer -q set Master toggle

XF86Audio{Play,Stop,Next,Prev}
    cmus-remote -{u,s,n,r}

XF86KbdBrightness{Up,Down}
    ~/scripts/kb-backlight.py {+,-}
